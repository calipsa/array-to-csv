{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "declaration": true,
    "alwaysStrict": true,
    // "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "dom" // because of papaparse
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "text"
  ]
}
